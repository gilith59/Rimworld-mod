<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- Le spawner qui crée progressivement l'InsectLairEntrance -->
  <ThingDef>
    <defName>InsectLairSpawner</defName>
    <label>underground emergence</label>
    <description>The ground is cracking and shifting. Something is emerging from below.</description>
    <thingClass>BuildingGroundSpawner</thingClass>
    <destroyable>false</destroyable>
    <holdsRoof>true</holdsRoof>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <useHitPoints>false</useHitPoints>
    <drawerType>RealtimeOnly</drawerType>
    <size>(6, 6)</size>
    <uiIconPath>UI/Icons/UndergroundEmergence</uiIconPath>
    <building>
      <!-- Effet visuel pendant l'émergence (fissures, poussière) -->
      <groundSpawnerSustainedEffecter>EmergencePointSustained8X8</groundSpawnerSustainedEffecter>

      <!-- Effet visuel à la fin (explosion de terre) -->
      <groundSpawnerCompleteEffecter>EmergencePointComplete8X8</groundSpawnerCompleteEffecter>

      <!-- Le thing à spawner à la fin -->
      <groundSpawnerThingToSpawn>InsectLairEntrance</groundSpawnerThingToSpawn>

      <!-- Délai: 20000-40000 ticks = 8-16 heures (production, comme PitGate) -->
      <groundSpawnerSpawnDelay>20000~40000</groundSpawnerSpawnDelay>

      <!-- Détruit les structures adjacentes (comme PitGate) -->
      <groundSpawnerDestroyAdjacent>true</groundSpawnerDestroyAdjacent>

      <!-- Son continu pendant l'ouverture -->
      <groundSpawnerSustainerSound>PitGateOpening</groundSpawnerSustainerSound>

      <!-- Lettre envoyée quand l'émergence est complète -->
      <groundSpawnerLetterLabel>Insect lair opened</groundSpawnerLetterLabel>
      <groundSpawnerLetterText>The shifting ground has collapsed into a massive cave entrance. Insects are pouring out from the darkness below!\n\nThis insect lair will remain open until you collapse its entrance. You must venture into the cave and defeat the Hive Queen to be able to seal it.</groundSpawnerLetterText>
    </building>
  </ThingDef>

</Defs>
