  <!-- ========== SMELTING RECIPES (Electric Smelter) ========== -->

  <RecipeDef>
    <defName>SmeltJunkScrap</defName>
    <label>smelt junk scrap</label>
    <description>Smelt junk scrap to recover steel.</description>
    <jobString>Smelting junk scrap.</jobString>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>400</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>LootScrap_Junk</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Steel>10</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>LootScrap_Junk</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>

