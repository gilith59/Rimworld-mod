  <!-- ========== MACHINING RECIPES (Machining Table Only) ========== -->

  <RecipeDef>
    <defName>MachineJunkScrap</defName>
    <label>machine junk scrap into component</label>
    <description>Machine 3 junk scraps to extract a component. Takes as long as crafting a component (5000 ticks).</description>
    <jobString>Machining junk scrap.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>5000</workAmount>
    <skillRequirements>
      <Crafting>4</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>LootScrap_Junk</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
