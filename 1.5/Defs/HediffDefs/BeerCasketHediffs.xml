<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>BeerCasketRestoration</defName>
    <label>beer casket restoration</label>
    <description>This pawn is sleeping in a beer casket, slowly restoring their beergen reserves through alcoholic vapor absorption.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 0.4, 0.1)</defaultLabelColor>
    <isBad>false</isBad>
    <maxSeverity>1.0</maxSeverity>
    <initialSeverity>1.0</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>beer restoration</label>
        <statOffsets>
          <RestFallRateFactor>-0.1</RestFallRateFactor>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>