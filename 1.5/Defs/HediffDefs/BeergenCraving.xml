<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>BeergenCraving</defName>
    <label>beergen craving</label>
    <description>This person's beergen levels are low, causing intense cravings for alcohol.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.4, 0.1)</defaultLabelColor>
    <isBad>true</isBad>
    <maxSeverity>3.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <label>mild craving</label>
      </li>
      <li>
        <minSeverity>1</minSeverity>
        <label>strong craving</label>
      </li>
      <li>
        <minSeverity>2</minSeverity>
        <label>desperate craving</label>
      </li>
    </stages>
  </HediffDef>

</Defs>