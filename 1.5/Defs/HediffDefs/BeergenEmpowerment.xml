<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>BeergenEmpowerment</defName>
    <label>beergen empowerment</label>
    <description>High beergen levels enhance this person's physical and mental capabilities.</description>
    <hediffClass>Hediff</hediffClass>
    <defaultLabelColor>(0.2, 0.8, 0.3)</defaultLabelColor>
    <isBad>false</isBad>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <chronic>true</chronic>
    <stages>
      <li>
        <label>empowered</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.1</offset>
          </li>
        </capMods>
        <statOffsets>
          <ConstructionSpeed>0.2</ConstructionSpeed>
          <MeleeHitChance>5</MeleeHitChance>
          <MeleeDodgeChance>5</MeleeDodgeChance>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
          <WorkSpeedGlobal>0.15</WorkSpeedGlobal>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>