<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- 30-day ability to use poing ivre -->
  <HediffDef>
    <defName>PoingIvreMastery</defName>
    <label>poing ivre mastery</label>
    <description>This person has mastered the legendary drunken fist technique through 10 days of beer meditation. They can now channel this power in combat by consuming beergen. The mastery will fade after 30 days unless renewed through meditation.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 0.8, 0.2)</defaultLabelColor>
    <isBad>false</isBad>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <label>master</label>
        <becomeVisible>true</becomeVisible>
      </li>
    </stages>
    <comps>
      <li Class="Decadents.HediffCompProperties_GrantAbility">
        <abilityDef>PoingIvre</abilityDef>
      </li>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>1800000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>

  <!-- Short combat state when ability is activated -->
  <HediffDef>
    <defName>PoingIvreActive</defName>
    <label>poing ivre</label>
    <description>This person is channeling the drunken fist technique, moving with supernatural grace and power. Their attacks are unpredictable and devastating, flowing like liquid while striking like thunder.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 0.2, 0.2)</defaultLabelColor>
    <isBad>false</isBad>
    <makesSickThought>false</makesSickThought>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <initialSeverity>1.0</initialSeverity>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <label>drunken fury</label>
        <becomeVisible>true</becomeVisible>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.5</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.3</offset>
          </li>
        </capMods>
        <statOffsets>
          <MeleeHitChance>25</MeleeHitChance>
          <MeleeDodgeChance>35</MeleeDodgeChance>
          <MeleeDPS>1.0</MeleeDPS>
          <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
          <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
          <PainShockThreshold>0.8</PainShockThreshold>
          <MeleeWeapon_CooldownMultiplier>-0.5</MeleeWeapon_CooldownMultiplier>
        </statOffsets>
        <painFactor>0.1</painFactor>
        <hungerRateFactorOffset>1.0</hungerRateFactorOffset>
        <restFallFactorOffset>0.8</restFallFactorOffset>
      </li>
    </stages>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>3600</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
  </HediffDef>

</Defs>